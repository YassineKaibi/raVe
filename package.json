{
  "name": "raVe",
  "version": "1.0.0",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "serve": "cross-env NODE_OPTIONS=--openssl-legacy-provider vue-cli-service serve --port 8080",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:serve": "concurrently \"cross-env NODE_OPTIONS=--openssl-legacy-provider BROWSER=none npm run serve\" \"wait-on http://localhost:8081 && electron .\"",
    "electron:build": "cross-env NODE_OPTIONS=--openssl-legacy-provider vue-cli-service build && electron-builder",
    "electron:dev": "electron ."
  },
  "dependencies": {
    "vue": "^2.6.10",
    "vue-router": "^3.0.2",
    "vuex": "^3.1.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.5.5",
    "@vue/cli-plugin-eslint": "^3.5.1",
    "@vue/cli-service": "^3.5.3",
    "@vue/eslint-config-prettier": "^4.0.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "image-webpack-loader": "^4.6.0",
    "sass": "^1.43.4",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.6.10",
    "wait-on": "^7.2.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
